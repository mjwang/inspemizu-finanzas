extends layout

block content
  h2 Ingresa un Estudiante
  form(role="form" action="add_student" method="POST")
    .form-group
      label(for="student_name") Nombre
      input.form-control(name="student_name" id="student_name" placeholder="Enter Student's Name")
    .form-group
      label(for="student_class") Curso
      select.form-control(name="student_class" id="student_class")
        for curso in classes
          option #{curso.name}
    .form-group
      label(for="enroll_date") Fecha de Matriculo
      input.form-control.datepicker(type="text" id="enroll_date" name="enroll_date")
    button(type="submit" class="btn btn-success") Guardar
    a.btn.btn-default(href="/home") Cancelar
