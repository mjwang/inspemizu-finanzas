extends layout

block content
  .well
    .row
      .col-md-9
        h3 #{student.name}
      .col-md-3 
        a.btn.btn-primary.pull-right(href="/edit_student" + student.id) Edit Information
    p.text-muted Curso: #{student.grade}
    p.text-muted Enrollment Date: #{student.enroll_date}

  .well
    .row
      .col-md-9
        h3 Pagos
      .col-md-3
        a.btn.btn-warning.pull-right(href="/assign_payment/" + student.id) Assign Payment
    .table-condensed
      table.table.table-striped
        thead
          tr
            th Nombre 
            th Valor 
            th Pago
            th Estado
            th
        tbody
          for payment in student_payments
            tr
              td #{payment.name}
              td #{payment.amount}
              td #{payment.paid} 
              td
                if payment.paid === payment.amount
                  .text-success Pago!
                else
                  .text-danger Moroso 
                  a.btn.btn-success.pull-right(href="/pay/" + student.id + "/" + payment.id) Paga Ahora!
              td: button.close.delete-ps(type="button" id=payment.id href=student.id + "/delete_payment/" + payment.id)
                span(aria-hidden ="true") &times;
                span.sr-only Close 
    h4.text-success Pago total: #{paid}
    h4.text-danger Deuda total: #{debt}

