extends layout

block content
  .row
    .col-md-9
      h2.sub-header Pagos 
    .col-md-3
      br
      a.btn.btn-warning.pull-right(href="/add_payment") Ingresa un Pago 
  br
  for payment in payments
    .well.clickable-row(href="/view_payment/" + payment.id)
      button.close.delete-p(type="button" id=payment.id)
        span(aria-hidden="true") &times;
        span.sr-only Close
      h3 #{payment.name}
      p.secondary.text-muted #{payment.date}
      if payment.students.length > 0
        h4.text-success Valor: #{payment.amount} / Estudiante
      else
        h4.text-success Valor: #{payment.amount} 

      if payment.students.length > 0
        p #{payment.students.length} Estudiantes Pendientes de Pago:
        ul 
          for student in payment.students
            li.text-danger #{student.name}

