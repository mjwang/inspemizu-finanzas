extends layout

block content
  h2 Ingresa el Pago  
  form(role="form" action="add_payment" method="POST")
    .form-group
      label(for="payment_name") Nombre del Pago
      select.form-control(name="payment_name" id="payment_name")
        option Matricula
        option Pensiones de Febrero
        option Pensiones de Marzo
        option Pensiones Abril
        option Pensiones Mayo
        option Pensiones Junio
        option Pensiones Julio
        option Pensiones Agosto
        option Pensiones Septiembre
        option Pensiones Octubre
        option Pensiones Noviembre
        option Pensiones Diciembre
        option Certificados
        option Uniformes
        option Tienda Escolar
        option Otro...
    .form-group
      label(for="payment_date") La Fecha del Pago
      input.form-control.datepicker(type="text" id="payment_date" name="payment_date") 
    .form-group
      label(for="amount") Valor
      input.form-control(type="number" name="amount" id="amount" placeholder="Ingrese el Valor del Pago")
    .form-group
      label(for="ptype") Assign Payment (Optional)
      br
      for curso in classes
        label.checkbox-inline
          input(type="checkbox" id= curso.name name= curso.name) 
          | #{curso.name}
    button.btn.btn-success(type="submit") Guardar
    a.btn.btn-default(href="/home") Cancelar
